<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/register"
    android:background="@drawable/bg5"
    tools:context=".Register"
    android:padding="16dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="Final Details"
        android:textSize="40sp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/username"
        android:layout_height="66dp"
        android:hint="Name"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:inputType="text"
        android:background="@drawable/register_edittext_backfround"
        android:drawableLeft="@drawable/ic_baseline_person"
        android:padding="10dp"
        android:elevation="16dp"
        android:layout_marginBottom="12dp"/>
    <EditText
        android:layout_width="match_parent"
        android:hint="Amount"
        android:inputType="number"
        android:layout_height="66dp"
        android:id="@+id/amount"
        android:textStyle="bold"
        android:layout_marginTop="14dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:padding="10dp"
        android:background="@drawable/register_edittext_backfround"
        android:elevation="8dp"/>

    <EditText
        android:id="@+id/rate"
        android:layout_width="371dp"
        android:layout_height="66dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="14dp"
        android:textStyle="bold"
        android:layout_marginRight="2dp"
        android:background="@drawable/register_edittext_backfround"
        android:elevation="8dp"
        android:hint="Rate"
        android:inputType="number"
        android:padding="10dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:hint="Total"
        android:paddingBottom="12dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/total"
        android:layout_marginRight="2dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/register_edittext_backfround"
        android:elevation="8dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_margin="2dp"
        android:drawableLeft="@drawable/ic_phone_24"
        android:padding="10dp"
        android:id="@+id/mobile"
        android:hint="Mobile"
        android:textStyle="bold"
        android:inputType="number"
        android:background="@drawable/register_edittext_backfround"
        android:elevation="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right|center">
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Confirm"
            android:background="@drawable/bac2"
            android:layout_marginTop="10dp"
            android:id="@+id/conform"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#ffffff"/>
    </LinearLayout>
</LinearLayout>