<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg5"
    android:gravity="center"
    tools:context=".Login"
    android:padding="26dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hi Everyone"
        android:textColor="#000"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_marginBottom="150dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:text="Admin-login"
        android:textColor="#000"
        android:textSize="32sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_margin="2dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/register_edittext_backfround"
        android:drawableLeft="@drawable/ic_baseline_person"
        android:elevation="16dp"
        android:hint="ID"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/register_edittext_backfround"
        android:drawableLeft="@drawable/ic_lock_24"
        android:drawableRight="@drawable/ic_remove_red_eye_24"
        android:elevation="8dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/login"
        android:text="Login"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="#000"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Register"
        android:layout_marginTop="10dp"
        android:id="@+id/register"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="#000"/>

</LinearLayout>