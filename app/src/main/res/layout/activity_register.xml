<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Register">


    <TextView
        android:id="@+id/ac"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="User Account"
        android:textColor="#000"
        android:textSize="32sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/ac"
        android:layout_margin="10dp"
        android:background="@drawable/register_edittext_backfround"
        android:drawableLeft="@drawable/ic_person_24"
        android:hint="Firstname"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/username"
        android:background="@drawable/register_edittext_backfround"
        android:drawableLeft="@drawable/ic_person_24"
        android:hint="Lastname"
        android:inputType="text"
        android:layout_margin="10dp"

        />

    <EditText
        android:id="@+id/password"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/lastname"
        android:background="@drawable/register_edittext_backfround"
        android:drawableLeft="@drawable/ic_lock_24"
        android:drawableRight="@drawable/ic_remove_red_eye_24"
        android:hint="password"
        android:inputType="textPassword"
        android:layout_margin="10dp"

        />
    <EditText
        android:id="@+id/email"
        android:layout_below="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/register_edittext_backfround"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:layout_margin="10dp"
        />

    <EditText
        android:id="@+id/mobile"
        android:layout_below="@id/email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/register_edittext_backfround"
        android:drawableLeft="@drawable/ic_phone_24"
        android:hint="Mobile"
        android:inputType="number"
        />

    <Button
        android:id="@+id/admincreate"
        android:layout_below="@id/mobile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/bac3"
        android:text="Create"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        />
</RelativeLayout>
